<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="md.ceiti.md.cazarefx_hibernate.view.TipCamera.AddTipCamera"
            prefHeight="400.0" prefWidth="600.0">
    <VBox alignment="CENTER" spacing="10.0" prefWidth="100.0" prefHeight="400.0"
          AnchorPane.leftAnchor="200" AnchorPane.rightAnchor="200" AnchorPane.topAnchor="50" AnchorPane.bottomAnchor="50">
    <TextField fx:id="nameField" layoutX="120.0" layoutY="80.0" promptText="Name" />
    <TextField fx:id="descriereField" layoutX="120.0" layoutY="120.0" promptText="Descriere" />
    <TextField fx:id="Nr_cameraField" layoutX="120.0" layoutY="160.0" promptText="Nr Camere" />
    <TextField fx:id="ocupateField" layoutX="120.0" layoutY="200.0" promptText="Ocupata" />
    <TextField fx:id="disponibilaField" layoutX="120.0" layoutY="240.0" promptText="Disponibila" />

    <Button fx:id="addButton" layoutX="120.0" layoutY="280.0" text="Add Camera" onAction="#handleAddCamera" />
</VBox>
</AnchorPane>
